<?xml version="1.0"?>

<config>
  <sections>
    <mventory_tm translate="label">
      <label>mVentory</label>
      <tab>sales</tab>
      <frontend_type>text</frontend_type>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>0</show_in_store>
      <sort_order>2000</sort_order>
      <groups>
        <settings translate="label">
          <label>TM Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>
          <fields>
            <key translate="label">
              <label>API Key</label>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </key>
            <secret translate="label">
              <label>API Secret</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </secret>
            <sandbox translate="label">
              <label>Sandbox</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </sandbox>
            <cron translate="label comment">
              <label>Cron interval (in minutes)</label>
              <comment>Zero = no cron</comment>
              <frontend_type>text</frontend_type>
              <backend_model>mventory_tm/system_config_backend_cron</backend_model>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </cron>
            <footer translate="label">
              <label>Footer description</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </footer>

            <allow_buy_now translate="label">
              <label>Allow Buy Now</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <sort_order>6</sort_order>

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </allow_buy_now translate="label">

            <relist_if_not_sold translate="label">
              <label>Relist if not sold</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <sort_order>7</sort_order>

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </relist_if_not_sold>
          </fields>
        </settings>
        <api translate="label">
          <label>Phone API</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>
          <fields>
            <products-number-to-fetch  translate="label">
              <label>Number of products to fetch</label>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </products-number-to-fetch>

            <add_to_websites translate="label">
              <label>Add product to websites</label>
              <frontend_type>multiselect</frontend_type>
              <source_model>adminhtml/system_config_source_website</source_model>
              <backend_model>mventory_tm/config_data_websites</backend_model>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
              <comment>Hold Ctrl to select multiple categories</comment>
            </add_to_websites>

            <tax_class translate="label">
              <label>Default tax</label>

              <frontend_type>select</frontend_type>
              <source_model>tax/class_source_product</source_model>

              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </tax_class>
          </fields>
        </api>

        <shop-interface translate="label" module="mventory_tm">
          <label>Shop interface</label>

          <sort_order>3</sort_order>

          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>

          <fields>
            <display-descending-products translate="label">
              <label>Display all descending products</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </display-descending-products>
          </fields>
        </shop-interface>

        <qr translate="label">
          <label>Labels</label>
          <comment><![CDATA[<a target="_blank" href="/mventory_tm/qr/labels">Generator</a>]]></comment>
          <frontend_type>text</frontend_type>
          <sort_order>4</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>0</show_in_website>
          <show_in_store>0</show_in_store>
          <fields>
            <rows translate="label">
              <label>Rows</label>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </rows>
            <columns translate="label">
              <label>Columns</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </columns>
            <size translate="label">
              <label>QR code size, px</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </size>
            <pages translate="label">
              <label>Number of pages</label>
              <frontend_type>text</frontend_type>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </pages>
            <css translate="label">
              <label>Custom CSS</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </css>
            <base_url translate="label">
              <label>Base URL (optional)</label>
              <frontend_type>text</frontend_type>
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </base_url>
            <copies translate="label">
              <label>Copies per code</label>
              <frontend_type>text</frontend_type>
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </copies>
          </fields>
        </qr>
      </groups>
    </mventory_tm>
  </sections>
</config>
