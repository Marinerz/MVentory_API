<?xml version="1.0"?>

<config>
  <sections>
    <mventory_tm translate="label">
      <label>mVentory</label>
      <tab>sales</tab>
      <frontend_type>text</frontend_type>

      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>0</show_in_store>

      <sort_order>2000</sort_order>

      <groups>
        <settings translate="label">
          <label>TM Settings</label>
          <frontend_model>mventory_tm/system_config_form_fieldset_settings</frontend_model>

          <show_in_default>0</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>

          <sort_order>1</sort_order>

          <account_template>
            <name translate="label">
              <label>Name</label>
              <frontend_type>text</frontend_type>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>1</sort_order>
            </name>

            <key translate="label">
              <label>API Key</label>
              <frontend_type>text</frontend_type>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>2</sort_order>
            </key>

            <secret translate="label">
              <label>API Secret</label>
              <frontend_type>text</frontend_type>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>3</sort_order>
            </secret>

            <max_listings translate="label">
              <label>Max Number of Listings</label>
              <frontend_type>text</frontend_type>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>4</sort_order>
            </max_listings>

            <allow_buy_now translate="label">
              <label>Allow Buy Now</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>5</sort_order>
            </allow_buy_now>

            <relist translate="label">
              <label>Relist if not sold</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>6</sort_order>
            </relist>

            <avoid_withdrawal translate="label">
              <label>Avoid withdrawal</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>7</sort_order>
            </avoid_withdrawal>

            <add_fees translate="label">
              <label>Add TM fees</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>8</sort_order>
            </add_fees>

            <shipping_type translate="label">
              <label>Shipping type</label>
              <frontend_type>select</frontend_type>
              <source_model>mventory_tm/system_config_source_shippingtype</source_model>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>9</sort_order>
            </shipping_type>

            <buyer translate="label">
              <label>TM buyer ID</label>
              <frontend_type>text</frontend_type>
              <!--<source_model>mventory_tm/system_config_source_customers</source_model>-->  

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>10</sort_order>
            </buyer>

            <footer translate="label">
              <label>Footer description</label>
              <comment><![CDATA[
                Available variables:
                <ul style="list-style-type: disc; padding-left: 30px">
                  <li><tt>{{url}}</tt> - Product URL</li>
                  <li><tt>{{sd}}</tt> - Short description </li>
                  <li><tt>{{fd}}</tt> - Description </li>
                  <li><tt>{{attrs}}</tt> - Product attributes table</li>
                </ul>
              ]]></comment>
              <frontend_type>textarea</frontend_type>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>11</sort_order>
            </footer>
          </account_template>

          <fields>
            <sandbox translate="label">
              <label>Sandbox</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>102</sort_order>
            </sandbox>

            <cron translate="label comment">
              <label>Cron interval (in minutes)</label>
              <comment>Zero = no cron</comment>
              <frontend_type>text</frontend_type>
              <backend_model>mventory_tm/system_config_backend_cron</backend_model>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>103</sort_order>
            </cron>
          </fields>
        </settings>

        <api translate="label">
          <label>Phone API</label>
          <frontend_type>text</frontend_type>

          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>

          <sort_order>2</sort_order>

          <fields>
            <products-number-to-fetch  translate="label">
              <label>Number of products to fetch</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>1</sort_order>
            </products-number-to-fetch>

            <add_to_websites translate="label comment">
              <label>Add product to websites</label>
              <comment>Hold Ctrl to select multiple categories</comment>

              <frontend_type>multiselect</frontend_type>
              <source_model>adminhtml/system_config_source_website</source_model>
              <!--<backend_model>mventory_tm/config_data_websites</backend_model>-->

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>2</sort_order>
            </add_to_websites>

            <tax_class translate="label">
              <label>Default tax</label>

              <frontend_type>select</frontend_type>
              <source_model>tax/class_source_product</source_model>

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>3</sort_order>
            </tax_class>
            
            <cart-item-lifetime translate="label">
              <label>Cart item lifetime (minutes)</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>4</sort_order>
            </cart-item-lifetime>
          </fields>
        </api>

        <shop-interface translate="label" module="mventory_tm">
          <label>Shop interface</label>

          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>

          <sort_order>3</sort_order>

          <fields>
            <display-descending-products translate="label">
              <label>Display all descending products</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>1</sort_order>
            </display-descending-products>
          </fields>
        </shop-interface>

        <qr translate="label">
          <label>Labels</label>
          <comment><![CDATA[<a target="_blank" href="/mventory_tm/qr/labels">Generator</a>]]></comment>
          <frontend_type>text</frontend_type>

          <show_in_default>1</show_in_default>
          <show_in_website>0</show_in_website>
          <show_in_store>0</show_in_store>

          <sort_order>4</sort_order>

          <fields>
            <rows translate="label">
              <label>Rows</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>1</sort_order>
            </rows>

            <columns translate="label">
              <label>Columns</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>2</sort_order>
            </columns>

            <size translate="label">
              <label>QR code size, px</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>3</sort_order>
            </size>

            <pages translate="label">
              <label>Number of pages</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>4</sort_order>
            </pages>

            <css translate="label">
              <label>Custom CSS</label>
              <frontend_type>textarea</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>5</sort_order>
            </css>

            <base_url translate="label">
              <label>Base URL (optional)</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>6</sort_order>
            </base_url>

            <copies translate="label">
              <label>Copies per code</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>7</sort_order>
            </copies>
          </fields>
        </qr>

        <cdn translate="label">
          <label>Product Images CDN</label>
          <frontend_type>text</frontend_type>

          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>

          <sort_order>5</sort_order>

          <fields>
            <access_key translate="label">
              <label>Access Key</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>1</sort_order>
            </access_key>

            <secret_key translate="label">
              <label>Secret Key</label>
              <frontend_type>password</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>2</sort_order>
            </secret_key>

            <bucket translate="label">
              <label>Bucket name</label>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>3</sort_order>
            </bucket>

            <prefix translate="label">
              <label>Website Prefix</label>
              <frontend_type>text</frontend_type>

              <show_in_default>0</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>4</sort_order>
            </prefix>

            <resizing_dimensions translate="label comment">
              <label>Resizing Dimensions</label>
              <comment>Example: 300x300, 256x, x500</comment>
              <frontend_type>text</frontend_type>

              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>

              <sort_order>5</sort_order>
            </resizing_dimensions>
          </fields>
        </cdn>
      </groups>
    </mventory_tm>
  </sections>
</config>
