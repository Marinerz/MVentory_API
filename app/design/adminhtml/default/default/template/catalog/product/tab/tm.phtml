<script type="text/javascript">
//<![CDATA[

tm_categories_for_product(<?php echo $this->getUrlTemplates() ?>);

jQuery(document).ready(function ($) {
  var tm_data = <?php echo Zend_Json::encode($this->prepareDataForJs()) ?>;
  var limit = <?php echo MVentory_Tm_Model_Connector::TITLE_MAX_LENGTH; ?>;

  var $options = $('#product_info_tabs_tm_content')
                   .find('.tm-option')
                   .children()
                   .filter(':input');

  $('#product_edit_form').on('submit', function () {
    var name = $(this).find('input[name="product[name]"]').val();

    if (name.length <= limit)
      return;

    name = name.substring(0, limit - 3) + '...';

    var msg = 'Product\'s name exceeded the limit of '
              + limit
              + ' symbols.\n'
              + 'Please reduce its length or press OK to use '
              + 'following truncated name "'
              + name
              + '"'

    return confirm(msg);
  });

  $('#tm_account').on('change', function () {
    var account = tm_data['accounts'][$(this).val()];

    for (var key in account) {
      var $option = $options.filter('[name*="' + key + '"]')

      if ($option.is(':checkbox'))
        $option.prop('checked', account[key] == true);
      else
        $option.val(account[key]);
    }

    var price = parseFloat(tm_data['product']['price']);
    var shipping_rate = parseFloat(account['shipping_rate']);
    var tm_fees = parseFloat(account['fees']);

    $('#tm_shipping_rate').html(shipping_rate.toFixed(2));
    $('#tm_fees').html(tm_fees.toFixed(2));
    $('#tm_total_price').html((price + shipping_rate + tm_fees).toFixed(2));
  });
});

//]]>
</script>
